@model IEnumerable<TripUp.Models.TripListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TripId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelBuddies)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TripId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartingLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelBuddies)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TripName }) |
            @Html.ActionLink("Details", "Details", new { id = item.TripName }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TripName })
        </td>
    </tr>
}

</table>
